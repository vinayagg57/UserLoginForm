<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.vinayaggarwal.registrationapp.MainActivity">
    <include
        android:id="@+id/toolbar_view"
        layout="@layout/toolbar_activity"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="80dp"
    android:orientation="vertical">
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="User Name"
       android:textColor="#2196f3"
       android:textSize="18sp"/>
    <EditText
        android:layout_width="300dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_username_login"
        android:background="@android:color/transparent"
android:hint="Enter User Name"
        android:textColor="#de000000"
        android:textSize="18sp"
        />
    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="#1f000000"
        android:layout_marginTop="7dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_marginTop="20dp"
        android:textColor="#2196f3"
        android:textSize="18sp"/>
    <EditText
        android:layout_width="300dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/edit_password_login"
        android:background="@android:color/transparent"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:textColor="#de000000"
        android:textSize="18sp"
        />
    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="#1f000000"
        android:layout_marginTop="7dp"/>
</LinearLayout>
    <Button
        android:id="@+id/login_btn"
        android:layout_marginTop="40dp"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/green_btn_enabled_pressed"
        android:text="Log In"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="22sp" />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/SignUp_textView"
    android:layout_marginTop="15dp"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:text="@string/SignIn_text"
    android:textColor="#8A000000"
    android:clickable="true"
    android:textSize="14sp" />
</LinearLayout>
    </ScrollView>
</LinearLayout>